<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/dialog" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView android:textAppearance="?android:textAppearanceMedium" android:id="@+id/lblKeyWord" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/label_keyword" />
    <EditText android:id="@+id/inputTxtKeyWord" android:layout_width="fill_parent" android:layout_height="wrap_content" android:maxLines="8" android:minEms="12" 
        >
        <requestFocus />
    </EditText>
    <TextView android:textAppearance="?android:textAppearanceMedium" android:id="@+id/lblRuleType" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/label_match_rule" />
    <Spinner android:id="@+id/spinRuleType" android:layout_width="fill_parent" android:layout_height="wrap_content" android:drawSelectorOnTop = "true" />
    <TextView android:textAppearance="?android:textAppearanceMedium" android:id="@+id/lblRuleTypeTipe" android:layout_width="fill_parent" android:layout_height="wrap_content"  android:minLines="2"/>
   	 </LinearLayout>
   	<LinearLayout
            
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <Button
                android:id="@+id/edit_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="取消"
                android:textColor="#ff333333"
                android:textSize="16.0sp"
                android:layout_weight="1" 
                style="?android:attr/borderlessButtonStyle"
                />
			 <Button
                android:id="@+id/edit_btn_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="删除"
                android:textColor="#ff333333"
                android:textSize="16.0sp"
                android:layout_weight="1"
                android:visibility="invisible"
                style="?android:attr/borderlessButtonStyle"/>
			 <Button
                android:id="@+id/edit_btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="确定"
                android:textColor="#ff333333"
                android:textSize="16.0sp"
                android:layout_weight="1" 
                style="?android:attr/borderlessButtonStyle"/>
			 </LinearLayout>
</LinearLayout>
